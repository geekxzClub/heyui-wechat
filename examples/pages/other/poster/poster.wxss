/* pages/other/poster/poster.wxss */
page {
  background-color: #EDEEF2;
}

.poste_box {
  width: 85%;
  margin: auto;
  margin-top: 50rpx;
  background-color: #fff;
  border: 1rpx solid #ddd;
  box-shadow: 0px 0px 10px 5px #D8D7DD;
}

.savePoste {
  background-color: #FF8427;
  width: 90%;
  margin-left: auto;
  margin-right: auto;
  margin-top: 30rpx;
  color: #fff;
}

.saveTitle {
  font-size: 25rpx;
  color: #666;
  width: 90%;
  margin-left: auto;
  margin-right: auto;
  margin-top: 20rpx;
  text-align: center;
}

.tips {
  margin-top: 50rpx;
  text-align: center;
}

.tips .saveBtn {
  background: #FF6666;
  border-radius: 30rpx;
  padding: 12rpx 60rpx; 
  color: white;
  font-size: 28rpx;
}

.tips .info{
  opacity: 0.8;
  font-size: x-small;
  margin-top: 25rpx;
}