/* pages/about/about.wxss */

.h-list.card-menu{
  border-radius: 10rpx;
}
.UCenter-bg {
  /* background-image: url(https://oss.geekxz.com/hey-ui-oss/hey-ui-bg.jpeg); */
  background: linear-gradient(to top,#166BD8,#3688FF);
  background-size: cover;
  height: 500rpx;
  display: flex;
  justify-content: center;
  overflow: hidden;
  position: relative;
  flex-direction: column;
  align-items: center;
  font-weight: 300;
  text-shadow: 0 0 3px rgba(0, 0, 0, 0.3);
}

.UCenter-bg text {
  opacity: 0.8;
}

.UCenter-bg image {
  width: 180rpx;
  height: 180rpx;
}

.UCenter-bg .gif-wave{
  position: absolute;
  width: 100%;
  bottom: 0;
  left: 0;
  z-index: 99;
  mix-blend-mode: screen;  
  height: 100rpx;   
}

map,.mapBox{
  left: 0;
  z-index: 99;
  mix-blend-mode: screen;  
  height: 100rpx;   
}

map,.mapBox{
  width: 750rpx;
  height: 300rpx;
}

.h-user text{
  margin-right: 10rpx;
}
.h-user .tit{
  width: 120rpx;
}
.h-qrcode{
  margin-top: 120rpx;
}
.h-qrcode image{
  width: 200rpx;
  height: 200rpx;
}