.h-footer{
   width: 100%;
   overflow: hidden;
   padding: 30rpx 24rpx;
   box-sizing: border-box;
}
.h-fixed{
  position: fixed;
  bottom:env(safe-area-inset-bottom);
  z-index: 9999;
}
.h-footer-link{
  color: #596d96;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
}
 .h-link{
  position: relative;
  padding: 0 18rpx;
  line-height: 1;
}
.h-link::before{
  content: " ";
  position: absolute;
  right: 0;
  top: 0;
  width: 1px;
  bottom: 0;
  border-right: 1px solid #d3d3d3;
  -webkit-transform-origin: 100% 0;
  transform-origin: 100% 0;
  -webkit-transform: scaleX(0.5);
  transform: scaleX(0.5);
}
.h-link:last-child::before{
   border-right:0 !important
}
.h-link-hover{
  opacity: .5
}
.h-footer-copyright{
   font-size: 24rpx;
   color: #A7A7A7;
   line-height: 1;
   text-align: center;
   padding-top: 16rpx
}